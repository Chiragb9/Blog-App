<%- include ('partials/header') %>

<div class="ui main text segment container">
    <div class="ui huge header">Edit Blog</div>
    <form class = "ui form"action="/blog/<%=foundBlog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[name]" value="<%=foundBlog.name%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%=foundBlog.image%>">
        </div>
        <div class="field">
            <label>Blog</label>
            <textarea name="blog[blog]" ><%=foundBlog.blog%></textarea>
        </div>
        <button class="ui basic button purple big">Save Changes</button>  
    </form>
</div>



<%- include ('partials/footer') %>